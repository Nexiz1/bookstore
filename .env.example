# ===========================================
# Application Settings
# ===========================================
APP_NAME="BookStore API"
APP_VERSION="1.0.0"
DEBUG=True

# ===========================================
# MySQL Database Configuration
# ===========================================
# Docker Compose에서 사용할 MySQL 설정
MYSQL_ROOT_PASSWORD=your_root_password
MYSQL_DATABASE=bookStoreDb
MYSQL_USER=your_username
MYSQL_PASSWORD=your_password

# SQLAlchemy Database URL (MySQL)
# 형식: mysql+pymysql://사용자:비밀번호@호스트:포트/데이터베이스
# 주의: 호스트는 docker-compose 서비스명인 'db' 사용
DATABASE_URL=mysql+pymysql://your_username:your_password@db:3306/bookStoreDb?charset=utf8mb4

# 로컬 MySQL 직접 연결 시 (Docker 외부에서)
# DATABASE_URL=mysql+pymysql://your_username:your_password@localhost:3306/bookStoreDb?charset=utf8mb4

# ===========================================
# JWT Configuration
# ===========================================
SECRET_KEY=your-super-secret-key-change-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# ===========================================
# Logging
# ===========================================
LOG_LEVEL=DEBUG  # DEBUG, INFO, WARNING, ERROR, CRITICAL

# ===========================================
# CORS Configuration
# ===========================================
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080"]
CORS_ALLOW_CREDENTIALS=True
CORS_ALLOW_METHODS=["*"]
CORS_ALLOW_HEADERS=["*"]
